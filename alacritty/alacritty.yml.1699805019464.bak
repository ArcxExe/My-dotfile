env:
  TERM: "xterm-256color"
window:
  opacity: 0.88
  decorations: none
scrolling:
  history: 1000
font:
  size: 13
  normal:
    family: "JetBrainsMono Nerd Font"
    style: "Bold"

cursor:
  style:
    shape: Block
    blinking: On
  unfocused_hollow: false 
  blink_interval: 550
live_config_reload: true


# Colors (Gruvbox Material Medium Dark)
colors:
  # Default colors
  primary:
    background: '#282828'
    foreground: '#d4be98'

  # Normal colors
  normal:
    black:   '#3c3836'
    red:     '#ea6962'
    green:   '#a9b665'
    yellow:  '#d8a657'
    blue:    '#7daea3'
    magenta: '#d3869b'
    cyan:    '#89b482'
    white:   '#d4be98'

  # Bright colors (same as normal colors)
  bright:
    black:   '#3c3836'
    red:     '#ea6962'
    green:   '#a9b665'
    yellow:  '#d8a657'
    blue:    '#7daea3'
    magenta: '#d3869b'
    cyan:    '#89b482'
    white:   '#d4be98'
